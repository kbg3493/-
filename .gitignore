num=int(input('수강한 과목의 개수를 입력해 주세요:'))    #수강과목 개수 입력
name = [[0 for w in range(2)] for h in range(num)]          #0으로 채워진 2중 리스트 만듦 (나중에 이유 설명)-------*1
sum=0       #학점을 모두 더할 변수
p=0         #name 리스트에 접근할 값
while(True):
    try:                                                #---*2
        name[p][0],name[p][1]=map(str,input(f'{p+1}.(과목명),(학점)의 형식으로 입력 해 주세요:').split(','))      #아까 만들어진(*1참조) 0으로 채워진 리스트의 0 값을 i,0에 과목 i,1에 학점을 저장하는 식으로 활용
        p+=1                                                                                               
        if p==num:
            break
    except:                                                                   #*2에서의 try 구문과 이 줄의 except 구문은 try문이 평소에 실행 되다가 오류가 나면 ecept 구문이 실행되는 구조로
        print('잘못된 형식으로 입력하셨습니다. 다시 입력해 주세요')               #과목명과 학점 입력에서 오류가 났을 때 잘못되었다 알려주고 continue 를 사용해 아직 p값이 더해지지 않았으므로 다시 입력 받음      
        continue
print('+-------------------------------------------------+')    #그냥 꾸미기 용
for q in range(num):                                    #for 문을 통해서 학점값을 다 더한 sum을 구한다.
    sum+=float(name[q][1])                              
    print(f'[{name[q][0]}:{name[q][1]}]')               #for 문을 돌리면서 이때까지 바은 과목명과 학점을 확인하고자 출력한다.
print('+-------------------------------------------------+')    #그냥 꾸미기 용
print(f'[귀하의 학점은 {sum/num:.2f} 입니다.]')            #.2f는 소수점 2째자리까지 출력함을 말한다.
